{
  "name": "armando-borge",
  "version": "1.0.0",
  "description": "Armando Borge Website",
  "scripts": {
    "build": "mkdir -p dist && cp -r src/* dist && npx tailwindcss -i ./src/assets/css/main.css -o ./dist/assets/css/main.css --minify",
    "serve": "live-server dist --no-browser",
    "dev": "concurrently \"npm run build --watch\" \"npm run serve\""
  },
  "keywords": [
    "css",
    "web",
    "html"
  ],
  "author": "Armando Borge",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "concurrently": "^9.1.0",
    "live-server": "^1.2.1",
    "postcss": "^8.0.0",
    "prettier": "3.3.3",
    "tailwindcss": "^3.0.0"
  }
}
