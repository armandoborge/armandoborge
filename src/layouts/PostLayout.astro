---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Title from '@/components/Title.astro'

const { date, title, author, tags = [], description } = Astro.props.frontmatter
const formattedDate = new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
})
---

<BaseLayout pageTitle={title}>
    <header class='mb-12 md:mb-20 lg:text-center'>
        <Title title={title} />
        <div class='mb-4 flex flex-wrap items-center gap-2 text-sm lg:justify-center'>
            <time datetime={date.toString()}>{formattedDate}</time>
            <span>â€¢</span>
            <span class='text-ajna'>By {author}</span>
        </div>
        {
            tags.length > 0 && (
                <div class='mb-6 flex flex-wrap gap-2 lg:justify-center'>
                    {tags.map((tag: string) => (
                        <a href={`/tags/${tag}`} class='global-button-small'>
                            #{tag}
                        </a>
                    ))}
                </div>
            )
        }
    </header>
    <article class='mx-auto lg:max-w-3xl'>
        <p class='border-ajna bg-ajna/10 mb-8 rounded-sm border-1 border-dotted p-4 text-base italic'>
            <span class='text-ajna font-medium'>In this article:</span>
            {description}
        </p>
        <div
            class='prose dark:prose-invert prose-h1:font-medium prose-h1:text-2xl prose-h2:text-xl prose-h2:font-medium prose-h3:text-lg prose-h3:font-medium prose-a:text-ajna hover:prose-a:underline prose-p:text-justify prose-img:rounded-sm prose-headings:mb-4 prose-pre:bg-yang/10 dark:prose-pre:bg-yin/10 prose-pre:rounded-sm max-w-none'
        >
            <slot />
        </div>
        <footer class='border-yang/20 dark:border-yin/20 mt-12 border-t pt-6'>
            <div class='flex items-center justify-between'>
                <a href='/blog' class='text-ajna inline-flex items-center text-sm hover:underline'>
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        class='mr-1 h-4 w-4'
                        fill='none'
                        viewBox='0 0 24 24'
                        stroke='currentColor'
                    >
                        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 19l-7-7 7-7'
                        ></path>
                    </svg>
                    Back to all posts
                </a>
                <button
                    id='scrollToTop'
                    class='group hover:outline-ajna text-yin dark:text-yang size-7 cursor-pointer rounded-sm outline-1 outline-offset-1 outline-transparent outline-dotted'
                    aria-label='Scroll to top'
                >
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        class='dark:bg-yin bg-yang group-hover:bg-ajna size-7 rounded-sm p-1.5 transition-colors'
                        fill='none'
                        viewBox='0 0 24 24'
                        stroke='currentColor'
                    >
                        <path
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            stroke-width='2'
                            d='M5 10l7-7m0 0l7 7m-7-7v18'></path>
                    </svg>
                </button>
            </div>
        </footer>
    </article>
</BaseLayout>

<script>
    document.getElementById('scrollToTop')?.addEventListener('click', () => {
        window.scrollTo({
            top: 0,
            behavior: 'smooth',
        })
    })
</script>
