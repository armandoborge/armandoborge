---
import IconGitHub from '@/img/github.svg'
import IconRSS from '@/img/rss.svg'
const currentYear = new Date().getFullYear()
---

<footer>
    <div
        class='mx-auto flex w-full max-w-7xl items-center justify-between px-4 pt-8 pb-4 md:px-10 lg:px-14'
    >
        <p class='text-sm/6'>&copy; {currentYear} Armando Borge</p>
        <div class='flex justify-center gap-x-3'>
            <a href='/rss.xml' class='hover:text-ajna'>
                <span class='sr-only'>RSS</span>
                <IconRSS class='size-6 fill-current' />
            </a>
            <a href='https://github.com/armandoborge' class='hover:text-ajna'>
                <span class='sr-only'>GitHub</span>
                <IconGitHub class='size-6 fill-current' />
            </a>
        </div>
    </div>
</footer>
