---
const currentYear = new Date().getFullYear()
const {
    roleName,
    companyName,
    companyCountry,
    fromYear,
    toYear = currentYear,
    description,
    url,
} = Astro.props
---

<div>
    <div
        class='border-yang/40 dark:border-yin/40 mb-2 flex items-start justify-between gap-4 border-b-1 border-dotted pb-2'
    >
        <div>
            <h3 class='text-ajna mb-1 text-base font-medium md:text-base'>
                {roleName}
            </h3>
            <p class='text-xs font-medium uppercase'>{companyName}</p>
        </div>
        <div class='text-right uppercase'>
            <p class='mb-1 text-xs font-medium'>{companyCountry}</p>
            <p class='text-ajna text-xs'>{fromYear} - {toYear}</p>
        </div>
    </div>
    <p class='text-base leading-loose'>
        {description}
    </p>
    <a
        href={url}
        class='hover:bg-ajna bg-yang dark:text-yang text-yin hover:text-yin dark:bg-yin mt-4 inline-block rounded-sm px-4 py-1 text-sm font-medium'
        target='_blank'
        rel='noopener noreferrer'>{url}</a
    >
</div>
