---
const currentYear = new Date().getFullYear()
const {
    roleName,
    companyName,
    companyCountry,
    fromYear,
    toYear = currentYear,
    description,
    url,
} = Astro.props
---

<div>
    <div
        class='mb-2 flex items-start justify-between gap-4 border-b-1 border-dotted border-black/40 pb-2 dark:border-white/40'
    >
        <div>
            <h3 class='text-red mb-1 text-base font-medium md:text-base'>
                {roleName}
            </h3>
            <p class='text-xs font-medium uppercase'>{companyName}</p>
        </div>
        <div class='text-right uppercase'>
            <p class='mb-1 text-xs font-medium'>{companyCountry}</p>
            <p class='text-red text-xs'>{fromYear} - {toYear}</p>
        </div>
    </div>
    <p class='text-base leading-loose'>
        {description}
    </p>
    <a
        href={url}
        class='hover:bg-red mt-4 inline-block rounded-sm bg-black px-2 py-1 text-sm font-medium text-white dark:bg-white dark:text-black'
        target='_blank'
        rel='noopener noreferrer'>{url}</a
    >
</div>
