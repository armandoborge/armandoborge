---
const currentYear = new Date().getFullYear()
const {
    roleName,
    companyName,
    companyCountry,
    fromYear,
    toYear = currentYear,
    description,
    url,
} = Astro.props
---

<div>
    <div
        class='border-yang/50 dark:border-yin/50 mb-2 flex flex-col justify-between gap-4 border-b-1 border-dotted pb-2 md:flex-row md:items-end'
    >
        <div>
            <p class='text-ajna mb-1 text-xs font-medium uppercase'>
                {companyName}
            </p>
            <h3 class='text-xl font-light capitalize md:text-2xl'>
                {roleName}
            </h3>
        </div>
        <div class='text-right uppercase'>
            <p class='text-ajna mb-1 text-xs'>{fromYear} - {toYear}</p>
            <p class='text-xs font-medium'>{companyCountry}</p>
        </div>
    </div>
    <p class='text-base leading-relaxed'>
        {description}
    </p>
    <a
        href={url}
        class='global-button-small mt-4'
        target='_blank'
        rel='noopener noreferrer'>{url}</a
    >
</div>
