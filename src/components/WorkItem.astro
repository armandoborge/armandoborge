---
const currentYear = new Date().getFullYear()
const {
    roleName,
    companyName,
    companyCountry,
    fromYear,
    toYear = currentYear,
    description,
    url,
} = Astro.props
---

<div>
    <div
        class='border-yang/50 dark:border-yin/50 mb-2 flex items-end justify-between gap-4 border-b-1 border-dotted pb-2'
    >
        <div>
            <h3 class='text-ajna mb-1 text-base font-medium md:text-lg'>
                {roleName}
            </h3>
            <p class='text-xs font-medium uppercase'>{companyName}</p>
        </div>
        <div class='text-right uppercase'>
            <p class='text-ajna mb-1 text-xs'>{fromYear} - {toYear}</p>
            <p class='text-xs font-medium'>{companyCountry}</p>
        </div>
    </div>
    <p class='text-base leading-loose'>
        {description}
    </p>
    <a
        href={url}
        class='global-button-small'
        target='_blank'
        rel='noopener noreferrer'>{url}</a
    >
</div>
