---
const { title, url, date, description, author, tags = [] } = Astro.props
const formattedDate = new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
})
---

<article
    class='group hover:outline-ajna mb-10 rounded-xs outline-1 outline-offset-[8px] outline-transparent outline-dotted'
>
    <a href={url} class='block'>
        <div class='mb-1.5 flex flex-wrap items-center gap-2 text-xs font-medium uppercase'>
            <time datetime={date.toString()}>{formattedDate}</time>
        </div>
        <h3
            class='group-hover:text-ajna border-yang/50 dark:border-yin/50 mb-2 border-b-1 border-dotted pb-2 text-xl font-medium capitalize'
        >
            {title}
        </h3>
        <p class='text-sm leading-relaxed'>{description}</p>
    </a>
</article>
