---
const { title, url, date, description, tags, author } = Astro.props

// Format date for display if available
const formattedDate = date
    ? new Date(date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
      })
    : null
---

<li class='border-yang/10 dark:border-yin/10 mb-8 border-b pb-8 last:border-0'>
    <article class='group'>
        <a href={url} class='block'>
            <h2
                class='group-hover:text-ajna mb-2 text-xl font-bold transition-colors md:text-2xl'
            >
                {title}
            </h2>

            {
                formattedDate && (
                    <div class='text-yang/70 dark:text-yin/70 mb-3 text-sm'>
                        <time datetime={date?.toString()}>{formattedDate}</time>
                        {author && (
                            <>
                                <span class='text-yang/50 dark:text-yin/50 mx-2'>
                                    â€¢
                                </span>
                                <span>By {author}</span>
                            </>
                        )}
                    </div>
                )
            }

            {
                description && (
                    <p class='text-yang/80 dark:text-yin/80 mb-4'>
                        {description}
                    </p>
                )
            }

            {
                tags && tags.length > 0 && (
                    <div class='flex flex-wrap gap-2'>
                        {tags.map((tag: string) => (
                            <span class='bg-yang/10 dark:bg-yin/10 text-yang/70 dark:text-yin/70 rounded-full px-2 py-1 text-xs'>
                                #{tag}
                            </span>
                        ))}
                    </div>
                )
            }
        </a>
    </article>
</li>
