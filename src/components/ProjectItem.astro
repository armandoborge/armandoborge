---
import { Image } from 'astro:assets'

const { project } = Astro.props
const { name, year, description, image, url } = project
---

<article
    class='group dark:text-yin border-ajna/40 hover:border-ajna relative isolate flex max-h-200 flex-col justify-between gap-80 overflow-hidden rounded-sm border-[1px] border-dotted p-4'
>
    <Image
        src={image}
        alt={name}
        width='1000'
        height='1000'
        class='absolute inset-0 -z-10 size-full rounded-sm object-cover p-0.5 grayscale-50'
    />
    <div
        class='group-hover:bg-yin/60 bg-yin/80 dark:group-hover:bg-yang/70 dark:bg-yang/90 absolute inset-0 -z-10 duration-300'
    >
    </div>
    <div class='relative'>
        <p class='text-xs font-bold uppercase'>
            <time datetime={year.toString()}>{year}</time>
        </p>
        <h2
            class='mt-1 flex items-start justify-between gap-4 text-2xl font-light text-balance capitalize md:text-3xl lg:text-4xl'
        >
            {name}
        </h2>
    </div>
    <div class='flex flex-col gap-1'>
        <p class='mt-2 text-base text-balance leading-relaxed'>
            {description}
        </p>
        <a
            href={url}
            title={name}
            target='_blank'
            rel='noopener noreferrer'
            class='text-sm font-medium'
        >
            <span class='absolute inset-0'></span>
            {url}
        </a>
    </div>
</article>
