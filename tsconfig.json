{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        //
        // Import aliases
        "baseUrl": ".",
        "paths": {
            "@/src/*": ["./src/*"],
            "@/blog/*": ["./src/blog/*"],
            "@/components/*": ["./src/components/*"],
            "@/css/*": ["./src/assets/css/*"],
            "@/img/*": ["./src/assets/img/*"],
            "@/layouts/*": ["./src/layouts/*"],
            "@/pages/*": ["./src/pages/*"]
        }
    }
}
