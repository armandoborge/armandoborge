{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        //
        // Import aliases
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@blog/*": ["src/blog/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@scripts/*": ["src/scripts/*"],
            "@styles/*": ["src/styles/*"],
        }
    },

}
