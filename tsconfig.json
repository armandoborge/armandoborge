{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        //
        // Import aliases
        "baseUrl": ".",
        "paths": {
            "@/src/*": ["./src/*"],
            "@/blog/*": ["./src/blog/*"],
            "@/components/*": ["./src/components/*"],
            "@/img/*": ["./src/img/*"],
            "@/layouts/*": ["./src/layouts/*"],
            "@/pages/*": ["./src/pages/*"],
            "@/styles/*": ["./src/styles/*"]
        }
    }
}
